<?xml version="1.0" encoding="utf-8"?>

<!-- Todo: Remove tools attributes -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover_track_overview"
            android:layout_width="@dimen/tracks_layout_album_cover_size"
            android:layout_height="@dimen/tracks_layout_album_cover_size"
            android:layout_weight="1"
            tools:src="@drawable/cover_sample" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/track_name_track_overview"
                style="@style/tracks_layout_song_info_one"
                tools:text="Track Name" />

            <TextView
                android:id="@+id/artist_name_track_overview"
                style="@style/tracks_layout_song_info_two"
                tools:text="Artist Name" />

            <TextView
                android:id="@+id/album_name_track_overview"
                style="@style/tracks_layout_song_info_two"
                tools:text="Album Name" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/tracks_layout_play_button_size"
            android:layout_height="@dimen/tracks_layout_play_button_size"
            android:layout_weight="1"
            android:src="@drawable/play" />

    </LinearLayout>
</LinearLayout>